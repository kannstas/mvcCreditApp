@model MvcCreditApp.Models.Bid

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Создание заявки";
}

<h2>Создание заявки</h2>

<h4>Bid</h4>
<hr />
<legend>Заявка</legend>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditHead" class="control-label"></label>
                <input asp-for="CreditHead" class="form-control" />
                <span asp-validation-for="CreditHead" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bidDate" class="control-label"></label>
                <input asp-for="bidDate" class="form-control" />
                <span asp-validation-for="bidDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" />
            </div>
        </form>
    </div>
</div>

@Html.ActionLink("Вернуться в список", "Index")

